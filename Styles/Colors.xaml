<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Ana Renkler -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#007ACC"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="AccentColor" Color="#FF4081"/>
    
    <!-- Arka Plan Renkleri -->
    <SolidColorBrush x:Key="BackgroundPrimary" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="BackgroundSecondary" Color="#3D3D3D"/>
    <SolidColorBrush x:Key="BackgroundLight" Color="#4D4D4D"/>
    
    <!-- Metin Renkleri -->
    <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#B3B3B3"/>
    <SolidColorBrush x:Key="TextMuted" Color="#808080"/>
    
    <!-- Durum Renkleri -->
    <SolidColorBrush x:Key="SuccessColor" Color="#28A745"/>
    <SolidColorBrush x:Key="WarningColor" Color="#FFC107"/>
    <SolidColorBrush x:Key="DangerColor" Color="#DC3545"/>
    <SolidColorBrush x:Key="InfoColor" Color="#17A2B8"/>
    
    <!-- GÃ¶lge Efektleri -->
    <DropShadowEffect x:Key="StandardShadow"
                      Direction="330"
                      ShadowDepth="3"
                      BlurRadius="5"
                      Opacity="0.3"
                      Color="Black"/>
</ResourceDictionary>